<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
 
<mapper namespace="com.example.demo.mapper.UserMapper">

 	<select id="selectCheckInformation" parameterType = "com.example.demo.domain.UserVO" resultType="String">
        SELECT 
        	userId 
        FROM 
        	userInfo 
        WHERE 
        	userId = #{userId} 
    <if test="userPw != null">
        AND userPw = #{userPw}
    </if>
    </select>
    
    <select id="selectIdCheck" parameterType = "com.example.demo.domain.UserVO" resultType="String">
        SELECT 
        	userId 
        FROM 
        	userInfo 
        WHERE 
        	userId = #{userId} 
    </select>
            
    <insert id="insertNewUserInformation" parameterType="com.example.demo.domain.UserVO">
        INSERT INTO 
        	userInfo 
        VALUES (
        	#{userId},
        	#{userPw},
        	0
        )
    </insert>
    
    <select id = "selectMyInfo" parameterType = "String" resultType = "com.example.demo.domain.UserVO">
    	SELECT 
    		coinAmount 
    	FROM 
    		userInfo
    	WHERE  
    		userId = #{userId}
    </select>
</mapper>